
@{
    ViewBag.Title = "New Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Purchase</h2>

<form id="newPurchases">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" type="text" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label>Curtain</label>
        <div class="tt-container">
            <input id="curtain" type="text" value="" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="curtains" class="list-group"></ul>
        </div>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

@section  scripts
{
    <script>
        $(document).ready(function () {
            var vm = {
                curtainIds: []
            };
            //customer auto completion
            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                minLength: 3,
                highlight: true
            }, {
                limit: 50,
                name: 'customers',
                display: 'name',
                source: customers
            }).on("typeahead:select", function (e, customer) {
                vm.customerId = customer.id;
            });

            //curtains auto completion
            var curtains = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/curtains?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#curtain').typeahead({
                minLength: 3,
                highlight: true
            }, {
                limit: 50,
                name: 'curtains',
                display: 'name',
                source: curtains
            }).on("typeahead:select", function (e, curtains) {
                $("#curtains").append("<li class='list-group-item'>" + curtains.name + "</li>");

                $("#curtain").typeahead("val", "");

                vm.curtainIds.push(curtains.id)
            });
            $("#newPurchases").submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: "/api/newPurchases",
                    method: "post",
                    data: vm
                })
                .done(function () {
                    toastr.success("Purchase successfully recorded.");
                })
                .fail(function () {
                    toastr.error("Something unexpected happenned.");
                })
            })
        })
    </script>
}
