@model MarfazahFashion.ViewModels.IndexCurtainViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Curtains</h2>

@if (Model.Curtains.Count < 1)
{
    <text>We currently don't have any curtain yet!</text>
}
else
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curtain in Model.Curtains)
        {
            <tr>
                <td>@Html.ActionLink(curtain.Name, "Detail", "Curtains", new { id = curtain.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>
}

