@model MarfazahFashion.ViewModels.IndexCustomerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Customers.Count < 1)
{
    <text>We currently don't have any Customer yet!</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td> @Html.ActionLink(customer.Name, "Detail", "Customers", new { id = customer.Id }, null) </td>
                </tr>
            }
        </tbody>
    </table>
}
